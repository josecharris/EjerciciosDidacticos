<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewUsers"
    android:layout_margin="12dp"
    app:cardBackgroundColor="#8A1E70"
    app:cardCornerRadius="35dp"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/idImageUser"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/outline_cinematic_blur_24"/>
        
        <TextView
            android:id="@+id/idUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de usuario"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@id/idImageUser"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/idPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ContraseÃ±a"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@id/idImageUser"
            android:layout_below="@id/idUsername"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUpdate"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="Actualizar"
            android:layout_below="@id/idPassword"
            android:layout_toEndOf="@id/idImageUser"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:textColor="#8A1E70"
            android:backgroundTint="@color/white"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDelete"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:text="Eliminar"
            android:layout_below="@id/idPassword"
            android:layout_toEndOf="@id/buttonUpdate"
            android:layout_marginTop="30dp"
            android:textColor="#8A1E70"
            android:backgroundTint="@color/white"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>